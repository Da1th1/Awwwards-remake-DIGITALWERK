{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog Post",
    "description": "Blog posts and articles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "author": {
      "type": "string",
      "required": false
    },
    "publishDate": {
      "type": "date",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Design",
        "Development",
        "Strategy",
        "Trends",
        "Company News",
        "Behind the Scenes",
        "Other"
      ],
      "default": "Other"
    },
    "tags": {
      "type": "json",
      "required": false
    },
    "readTime": {
      "type": "integer",
      "required": false,
      "default": 5
    }
  }
}

