{
  "kind": "collectionType",
  "collectionName": "cases",
  "info": {
    "singularName": "case",
    "pluralName": "cases",
    "displayName": "Case Study",
    "description": "Portfolio case studies showcasing client work"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "description": {
      "type": "text",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "client": {
      "type": "string",
      "required": false
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Web Development",
        "Branding",
        "E-commerce",
        "Digital Strategy",
        "UI/UX Design",
        "Other"
      ],
      "default": "Other"
    },
    "order": {
      "type": "integer",
      "default": 0,
      "required": false
    },
    "fullContent": {
      "type": "richtext",
      "required": false
    },
    "projectDate": {
      "type": "date",
      "required": false
    },
    "tags": {
      "type": "json",
      "required": false
    }
  }
}

